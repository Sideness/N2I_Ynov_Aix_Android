<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.company.n2i.refugees.InfoDetailsActivity"
    tools:showIn="@layout/activity_info_details">
    
    <TextView
        android:id="@+id/tvTitreDetail"
        android:layout_width="match_parent"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_height="50dp" />
    
    <TextView
        android:id="@+id/tvDescDetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="125dp" />
    
    <TextView
        android:id="@+id/tvAdresseDetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="50dp" />
    
    <TextView
        android:id="@+id/tvNumeroDetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="50dp" />
    
    <TextView
        android:id="@+id/tvDateDetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tvMailDetail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btGoToMap"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="50dp" />

</LinearLayout>
